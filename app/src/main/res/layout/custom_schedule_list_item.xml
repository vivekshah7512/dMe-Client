<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/map_dialog_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_sc_list_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <com.decideme.client.attributes.CustomTextview
                        android:id="@+id/tv_sc_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/Black1"
                        android:textSize="13sp"
                        app:fontName="@string/font_bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp">

                        <RatingBar
                            android:id="@+id/rating_sc"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5" />

                        <com.decideme.client.attributes.CustomTextview
                            android:id="@+id/tv_sc_list_total_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/Black1"
                            android:textSize="12sp"
                            app:fontName="@string/font_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/chat_blue"
                        android:tint="#A2A2A2" />

                    <com.decideme.client.attributes.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="Chat"
                        android:textColor="@color/Black1"
                        android:textSize="12sp"
                        app:fontName="@string/font_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_sc_list_task1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.decideme.client.attributes.CustomTextview
                        android:id="@+id/tv_sc_list_task1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:textColor="@color/Black1"
                        android:textSize="12sp"
                        app:fontName="@string/font_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_sc_list_task2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Chronometer
                        android:id="@+id/cm_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:textColor="@color/Black1"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.decideme.client.attributes.CustomTextview
                        android:id="@+id/tv_sc_list_task2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:textColor="@color/Black1"
                        android:textSize="12sp"
                        app:fontName="@string/font_regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_sc_list1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/greybelt">

                <com.decideme.client.attributes.CustomTextview
                    android:id="@+id/tv_sc_list1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="Accept"
                    android:textColor="@color/font_color"
                    android:textSize="13sp"
                    app:fontName="@string/font_regular" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sc_list2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/greenbelt">

                <com.decideme.client.attributes.CustomTextview
                    android:id="@+id/tv_sc_list2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="Start"
                    android:textColor="@color/font_color"
                    android:textSize="13sp"
                    app:fontName="@string/font_regular" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sc_list3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/greybelt">

                <com.decideme.client.attributes.CustomTextview
                    android:id="@+id/tv_sc_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="Ongoing"
                    android:textColor="@color/font_color"
                    android:textSize="13sp"
                    app:fontName="@string/font_regular" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>